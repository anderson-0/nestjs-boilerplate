# Test Environment
NODE_ENV=test
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=*

# Core Feature Selection for Testing (ONE option per feature)
DATABASE_PROVIDER=prisma-postgresql     # prisma-postgresql | drizzle-postgresql | mongoose-mongodb
ERROR_TRACKING_PROVIDER=none            # bugsnag | sentry | posthog | none
AUTH_PROVIDER=composite                 # composite | bearer-only | api-key-only | none
CACHE_PROVIDER=redis                    # redis | memory | none
DOCUMENTATION_PROVIDER=none             # swagger | none
LOGGING_PROVIDER=basic                  # detailed | basic | none
PERFORMANCE_PROVIDER=none               # full | basic | none

# Test PostgreSQL Database
DATABASE_URL=postgresql://test_user:test_password@localhost:5433/todo_test?schema=public
DIRECT_URL=postgresql://test_user:test_password@localhost:5433/todo_test?schema=public

# Test MongoDB Database
MONGODB_URL=mongodb://test_user:test_password@localhost:27018/todo_test?authSource=admin

# Test Redis
REDIS_HOST=localhost
REDIS_PORT=6380

# AWS (LocalStack for testing)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_S3_ENDPOINT=http://localhost:4566
AWS_S3_BUCKET=test-bucket

# Auth
JWT_SECRET=test-secret-key
API_KEY=test-api-key


# Error Tracking (disabled for tests)
BUGSNAG_API_KEY=test-bugsnag-key
SENTRY_DSN=test-sentry-dsn
POSTHOG_API_KEY=test-posthog-key