{
  "name": "todo-boilerplate",
  "version": "1.0.0",
  "description": "Todo CRUD boilerplate with NestJS, Prisma, Drizzle, and comprehensive testing",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json --runInBand --forceExit",
    "test:db:setup": "docker-compose up -d test-postgres test-redis",
    "test:db:stop": "docker-compose stop test-postgres test-redis",
    "test:localstack:setup": "docker-compose up -d test-localstack",
    "prisma:generate": "prisma generate --schema=./src/common/repositories/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./src/common/repositories/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./src/common/repositories/prisma/schema.prisma",
    "drizzle:generate": "drizzle-kit generate:pg --config=./src/common/repositories/drizzle/drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config=./src/common/repositories/drizzle/drizzle.config.ts",
    "benchmark": "node dist/benchmark/index.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@bugsnag/js": "^8.6.0",
    "@fastify/compress": "^8.1.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^6.17.1",
    "@sentry/node": "^8.55.0",
    "@sentry/profiling-node": "^8.55.0",
    "aws-jwt-verify": "^5.1.1",
    "cache-manager": "^7.2.3",
    "cache-manager-ioredis-yet": "^2.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "fastify": "^5.6.1",
    "ioredis": "^5.8.0",
    "mongoose": "^8.10.0",
    "pg": "^8.16.3",
    "posthog-node": "^4.18.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "autocannon": "^8.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.16.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testTimeout": 30000
  }
}
