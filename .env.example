# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=*

# Core Feature Selection (ONE option per feature)
DATABASE_PROVIDER=prisma-postgresql     # prisma-postgresql | drizzle-postgresql | mongoose-mongodb
ERROR_TRACKING_PROVIDER=bugsnag         # bugsnag | sentry | posthog | none
AUTH_PROVIDER=composite                 # composite | bearer-only | api-key-only | none
CACHE_PROVIDER=redis                    # redis | memory | none
DOCUMENTATION_PROVIDER=swagger          # swagger | none
LOGGING_PROVIDER=detailed               # detailed | basic | none
PERFORMANCE_PROVIDER=full               # full | basic | none

# PostgreSQL (for Prisma and Drizzle)
DATABASE_URL=postgresql://todo_user:todo_password@localhost:5432/todo_db?schema=public
DIRECT_URL=postgresql://todo_user:todo_password@localhost:5432/todo_db?schema=public

# MongoDB (for Mongoose)
MONGODB_URL=mongodb://todo_user:todo_password@localhost:27017/todo_db?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# AWS (LocalStack for local development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_S3_ENDPOINT=http://localhost:4566
AWS_S3_BUCKET=todo-bucket

# Auth
JWT_SECRET=your-secret-key-here
API_KEY=your-api-key-here


# Error Tracking - Bugsnag
BUGSNAG_API_KEY=your-bugsnag-key-here

# Error Tracking - Sentry
SENTRY_DSN=your-sentry-dsn-here

# Error Tracking - PostHog
POSTHOG_API_KEY=your-posthog-api-key-here
POSTHOG_HOST=https://app.posthog.com