# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://todo_user:todo_password@localhost:5432/todo_db?schema=public
DIRECT_URL=postgresql://todo_user:todo_password@localhost:5432/todo_db?schema=public
DATABASE_PROVIDER=prisma-postgresql

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# Feature Flags
FEATURE_COMPRESSION=true
FEATURE_DOCUMENTATION=true
FEATURE_CACHING=true
FEATURE_THROTTLING=true

# Cache Configuration
CACHE_TTL=300
CACHE_MAX=1000

# Throttling Configuration
THROTTLE_TTL=60000
THROTTLE_LIMIT=1000

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_ENABLED=true

# MongoDB (for Mongoose alternative)
MONGODB_URL=mongodb://todo_user:todo_password@localhost:27017/todo_db?authSource=admin

# LocalStack (for local AWS development)
AWS_S3_ENDPOINT=http://localhost:4566
AWS_S3_BUCKET=todo-bucket

# Error Tracking
BUGSNAG_API_KEY=your-bugsnag-key-here
SENTRY_DSN=your-sentry-dsn-here
POSTHOG_API_KEY=your-posthog-api-key-here
POSTHOG_HOST=https://app.posthog.com

# API Keys (if needed)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key