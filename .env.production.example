# Production Environment Configuration
# Copy this file to .env.production and fill in your actual production values

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration (Production)
DATABASE_URL=postgresql://PROD_USER:PROD_PASSWORD@PROD_HOST:5432/kodey_boilerplate_prod?schema=public
DIRECT_URL=postgresql://PROD_USER:PROD_PASSWORD@PROD_HOST:5432/kodey_boilerplate_prod?schema=public
DATABASE_PROVIDER=prisma-postgresql

# Redis Configuration (Production)
REDIS_URL=redis://PROD_REDIS_HOST:6379

# Authentication (Production)
JWT_SECRET=PRODUCTION_JWT_SECRET_HERE
ENCRYPTION_KEY=PRODUCTION_32_BYTE_ENCRYPTION_KEY

# CORS Configuration (Production)
CORS_ORIGIN=https://boilerplate.yourdomain.com,https://app-boilerplate.yourdomain.com

# AWS Configuration (Production)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=PROD_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=PROD_AWS_SECRET_KEY

# Feature Flags (Production)
FEATURE_COMPRESSION=true
FEATURE_DOCUMENTATION=false
FEATURE_CACHING=true
FEATURE_THROTTLING=true

# Cache Configuration (Production)
CACHE_TTL=600
CACHE_MAX=10000

# Throttling Configuration (Production)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Logging (Production)
LOG_LEVEL=warn

# Health Check
HEALTH_CHECK_ENABLED=true

# Error Tracking (Production)
BUGSNAG_API_KEY=your-production-bugsnag-key
SENTRY_DSN=your-production-sentry-dsn
POSTHOG_API_KEY=your-production-posthog-key
POSTHOG_HOST=https://app.posthog.com

# PostgreSQL Connection Pool (Production)
POSTGRES_USER=PROD_USER
POSTGRES_PASSWORD=PROD_PASSWORD
POSTGRES_DB=kodey_boilerplate_prod